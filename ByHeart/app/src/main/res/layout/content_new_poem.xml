<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_poem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wgjuh.byheart.NewPoemActivity"
    tools:showIn="@layout/activity_new_poem">

    <EditText
        android:id="@+id/new_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="@string/hint_input_title"
        android:textColorHint="@color/colorPrimaryDark"
        android:maxLines="1"
        style="@style/myedittext"
        android:paddingLeft="@dimen/new_title_field_padding"
        android:paddingRight="@dimen/new_title_field_padding"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/new_text_poem"
        android:layout_below="@id/new_text_title"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        style="@style/new_edit_text"
        />

</RelativeLayout>
